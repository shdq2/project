<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="payment">
	
	<insert id="payment" parameterType="paymentVO">
		insert into payment values(now(),#{reservation_code},#{payment_type},#{payment_card},#{payment_card_type},#{payment_name},#{payment_monthly},#{payment_money})
	</insert>
	
	<select id="select_payment" parameterType="Int" resultType="paymentVO">
		select * from payment where reservation_code=#{code}
	</select>
</mapper>
